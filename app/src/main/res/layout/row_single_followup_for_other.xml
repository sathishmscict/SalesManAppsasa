<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    android:layout_margin="4dp"

    android:elevation="3dp"

    card_view:cardCornerRadius="2dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"

        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout

            android:layout_weight="1"
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edtName"
                android:layout_width="353dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:clickable="false"
                android:cursorVisible="false"
                android:editable="false"
                android:focusable="false"
                android:hint="Client Name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                 />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:layout_weight="1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.design.widget.TextInputEditText
                android:id="@+id/edtCompnayName"
                android:layout_width="353dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:clickable="false"
                android:cursorVisible="false"
                android:editable="false"
                android:focusable="false"
                android:hint="Company Name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                />
        </android.support.design.widget.TextInputLayout>



    </LinearLayout>





        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:orientation="horizontal">






            <android.support.design.widget.TextInputLayout

                android:id="@+id/edtFollowupDateWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edtFollowupDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="Followup Date"

                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/match_parentWrapper"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edtFollowupTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="Followup Time"

                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/ivStatus"
                android:layout_width="35dp"
                android:layout_margin="8dp"
                android:layout_height="35dp"
                android:src="@drawable/icon_add"
                android:tint="@color/colorPrimary"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:orientation="vertical">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/edtNoteWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edtNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="Description"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/edtScheduleReasonWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edtScheduleReason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="Schedule Reason"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </android.support.design.widget.TextInputLayout>





        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:id="@+id/llMenu"

            android:visibility="gone"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/ivLocation"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:src="@drawable/icon_location"
                android:tint="@color/colorPrimary" />

            <ImageView
                android:id="@+id/ivCall"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:src="@drawable/icon_call"
                android:tint="@color/colorPrimary" />

            <ImageView
                android:id="@+id/ivServices"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:src="@drawable/icon_services"
                android:tint="@color/colorPrimary" />

            <ImageView
                android:id="@+id/ivEdit"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:src="@drawable/icon_edit"
                android:layout_margin="2dp"
                android:tint="@color/colorPrimary" />

            <ImageView
                android:id="@+id/ivDelete"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:src="@drawable/icon_delete"
                android:tint="@color/colorPrimary" />

            <ImageView
                android:id="@+id/ivShow"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:src="@drawable/icon_view"
                android:tint="@color/colorPrimary" />


        </LinearLayout>



    </LinearLayout>
</android.support.v7.widget.CardView>

